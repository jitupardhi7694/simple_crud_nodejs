<!DOCTYPE html>
<html lang="en">

<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        table,
        td,
        th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: auto ;
        }

        .table-data {
            overflow-x: auto;
        }

        th,
        td {
            padding: 15px;
        }
    </style>
</head>

<body>
    <div class="mt-5"></div>
    <div class="container">
        <h3>
            <%= title %>
        </h3>
    </div>
    <div class="container">
        <div class="col-md-6">
            <a type="button" class="btn btn-primary" href="/data_add">Add student</a>
            <a type="button" class="btn btn-info" href="/">Back To Home</a>
        </div>
    </div>
    <div class="mt-5"></div>
    <div class="container">
        <div class="md-5">
            <div class="table-data">
                <table border="1">
                    <tr>
                        <th>S.N</th>
                        <th>Name</th>
                        <th>Email Address</th>
                        <th>Mobile Number</th>
                        <th>Address</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>

                    <% if(student.length!=0){ var i=1; student.forEach(function(data){ %>
                        <tr>
                            <td>
                                <%=i; %>
                            </td>
                            <td>
                                <%=data.user_name %>
                            </td>
                            <td>
                                <%=data.email %>
                            </td>
                            <td>
                                <%=data.mobile_no %>
                            </td>
                            <td>
                                <%=data.address %>
                            </td>
                            <td><a href="/edit-form/<%= data.id %>">Edit</a></td>
                            <td><a href="/delete/ <%= data.id %>">Delete</a></td>
                        </tr>
                        <% i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                                <% } %>
                </table>
            </div>
        </div>
    </div>
</body>

</html>